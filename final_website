<script>
  function myfunction()
{
var name= document.getElementById("input").value;
var email= document.getElementById("input-email").value;
var mess= document.getElementById("mess").value;
if (name==""||email==""||mess=="")
{
if (name=="")
{
document.getElementById ("input").style.border="2px solid red";
document.getElementById("message").innerHTML="&middot;* Please enter your name";
}
if (email=="")
{
document.getElementById ("input-email").style.border="2px solid red";
document.getElementById("message-email").innerHTML="&middot; Please enter your email address";
}
if (mess=="")
{
document.getElementById ("mess").style.border="2px solid red";
document.getElementById("message-mess").innerHTML="&middot; Please enter your message";
}
return false;
}
else
{
document.getElementById("formSubmit").submit();
return true;
}
}
var acc = document.getElementsByClassName("accordion");
var i;
for (i = 0; i < acc.length; i++) {
  acc[i].onclick = function() {
    this.classList.toggle("active");
    var panel = this.nextElementSibling;
    if (panel.style.maxHeight){
      panel.style.maxHeight = null;
    } else {
      panel.style.maxHeight = panel.scrollHeight + "px";
    } 
  }
}
</script>
<script>
window.addEventListener('load', function(){
    var allimages= document.getElementsByTagName('img');
    for (var i=0; i<allimages.length; i++) {
        if (allimages[i].getAttribute('data-src')) {
            allimages[i].setAttribute('src', allimages[i].getAttribute('data-src'));
        }
    }
}, false)
</script>
